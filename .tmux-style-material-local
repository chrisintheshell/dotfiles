# Material Design Blue Grey Color Palette
# 50:  #ECEFF1
# 100: #CFD8DC
# 200: #B0BEC5
# 300: #90A4AE
# 400: #78909C
# 500: #607D8B
# 600: #546E7A
# 700: #455A64
# 800: #37474F
# 900: #263238

# Status bar styling
set -g status-bg "#263238"
set -g status-justify "left"
set -g status-left-length 100
set -g status-right-length 100
set -g status "on"

# Message styling (Blue Grey 50 on Blue Grey 900)
set -g message-style "fg=#263238,bg=#ECEFF1"
set -g message-command-style "fg=#263238,bg=#ECEFF1"

# Pane border styling
set -g pane-border-style "fg=#455A64"
set -g pane-active-border-style "fg=#B0BEC5"

# Window status styling
set -g window-status-style "fg=#90A4AE,bg=#263238"
set -g window-status-activity-style "fg=#B0BEC5,bg=#263238"
setw -g window-status-separator ""

# Status left with rounded corners (swapped: now using 455A64)
set -g status-left "#[fg=#ECEFF1,bg=#455A64,bold] #S #[fg=#455A64,bg=#263238]"

# Status right with rounded corners (swapped: date/time uses 607D8B, hostname uses 455A64)
set -g status-right "#{@off_mode}#[fg=#607D8B,bg=#263238]#[fg=#ECEFF1,bg=#607D8B] %Y-%m-%d  %H:%M #[fg=#455A64,bg=#607D8B]#[fg=#ECEFF1,bg=#455A64,bold] #h "

# Window status format (inactive windows)
setw -g window-status-format "#[fg=#78909C,bg=#263238] #I  #W "

# Window status format (active window - now using 607D8B)
setw -g window-status-current-format "#[fg=#607D8B,bg=#263238]#[fg=#ECEFF1,bg=#607D8B,bold] #I  #W #[fg=#607D8B,bg=#263238]"
